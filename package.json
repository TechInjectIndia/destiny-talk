{
  "name": "destiny-ai-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy:client": "cd apps/client && source ../../.env && vercel --prod -t $VERCEL_TOKEN",
    "deploy:admin": "cd apps/admin && source ../../.env && vercel --prod -t $VERCEL_TOKEN"
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "latest"
  },
  "packageManager": "bun@1.3.4"
}